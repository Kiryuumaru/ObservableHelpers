<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>Kiryuumaru</Company>
    <Authors>Kiryuumaru</Authors>
    <Description>Observable helpers with short-and-easy property implementations</Description>
    <RepositoryUrl>https://github.com/Kiryuumaru/ObservableHelpers</RepositoryUrl>
    <PackageTags>MVVM helpers, Serializable observables, Observable helpers</PackageTags>
    <PackageProjectUrl>https://github.com/Kiryuumaru/ObservableHelpers</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <Version>1.0.50</Version>
    <PackageReleaseNotes>* Bug fixes</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
    <None Include="..\LICENSE.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
