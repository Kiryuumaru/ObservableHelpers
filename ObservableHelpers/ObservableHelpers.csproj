<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Company>Kiryuumaru</Company>
    <Authors>Kiryuumaru</Authors>
    <Description>Observable helpers with short-and-easy and UI-safe property implementations. Can be used for any MVVM software architectural applications.</Description>
    <RepositoryUrl>https://github.com/Kiryuumaru/ObservableHelpers</RepositoryUrl>
    <PackageTags>MVVM, Observable, Model, Helper</PackageTags>
    <PackageProjectUrl>https://github.com/Kiryuumaru/ObservableHelpers</PackageProjectUrl>
    <Version>1.4.7</Version>
    <PackageReleaseNotes>* Enabled nullable language feature</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md" Pack="true" PackagePath="" />
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DisposableHelpers" Version="1.0.0" />
    <PackageReference Include="LockerHelpers" Version="1.0.0" />
    <PackageReference Include="SynchronizationContextHelpers" Version="1.0.0" />
  </ItemGroup>

</Project>
